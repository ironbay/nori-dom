{
    "compilerOptions": {
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "build/dist",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2020",
            "es2017.object"
        ],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}